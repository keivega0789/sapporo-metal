{
  "name": "sapporo-metal",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.0",
  "scripts": {
    "dev": "concurrently \"pnpm run task:optimize-images:watch\" \"vite\"",
    "build": "pnpm run task:clean && pnpm run task:optimize-images:no-watch && vite build",
    "preview": "vite preview",
    "format": "prettier --write ./src",
    "task:clean": "cross-env NODE_ENV=development node task/clean.mjs",
    "task:optimize-images:watch": "node task/optimize-images.mjs",
    "task:optimize-images:no-watch": "node task/optimize-images.mjs --no-watch"
  },
  "devDependencies": {
    "sass-embedded": "1.93.2",
    "vite": "^7.1.10",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "chokidar": "^4.0.3",
    "sharp": "^0.33.5",
    "svgo": "^3.3.2",
    "rimraf": "^6.0.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3"
  },
  "volta": {
    "node": "24.9.0",
    "pnpm": "10.18.0"
  }
}
